{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
